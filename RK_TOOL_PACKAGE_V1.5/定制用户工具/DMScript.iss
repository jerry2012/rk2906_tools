;Name: Spanish; MessagesFile: compiler:Languages\Spanish.isl

[Tasks]
Name: desktopicon; Description: {cm:CreateDesktopIcon}; GroupDescription: {cm:AdditionalIcons}; Flags: unchecked

[Files]
Source: Bin\*; DestDir: {app}\; Flags: ignoreversion recursesubdirs createallsubdirs
; NOTE: Don't use "Flags: ignoreversion" on any shared system files

[INI]
;Filename: {app}\setting.ini; Section: SYSTEM; Key: LANGUAGE; String: {code:GetString}; Flags: createkeyifdoesntexist; Tasks: ; Languages:

[Icons]
Name: {group}\Device Manager; Filename: {app}\RKDeviceManage.exe ;WorkingDir: "{app}"
Name: {group}\{cm:UninstallProgram,Device Manager}; Filename: {uninstallexe}
Name: {commondesktop}\Device Manager; Filename: {app}\RKDeviceManage.exe; Tasks: desktopicon;WorkingDir: "{app}"

[Run]
Filename: {app}\RKDeviceManage.exe; Description: {cm:LaunchProgram,Device Manager}; Flags: nowait postinstall skipifsilent

